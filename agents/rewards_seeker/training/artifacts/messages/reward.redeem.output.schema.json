{
  "$id": "https://yo-ai.ai/schemas/reward.redeem.output.schema.json",
  "title": "Reward.Redeem.Output",
  "description": "Profile-aware output for the Reward.Redeem capability.",
  "type": "object",
  "properties": {
    "result": {
      "type": "object",
      "description": "Primary capability output fields.",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "failed", "pending"]
        },
        "confirmation_code": {
          "type": "string",
          "description": "Redemption confirmation code, if successful."
        },
        "remaining_balance": {
          "type": "number",
          "description": "Remaining points or credit after redemption."
        }
      },
      "required": ["status"]
    },
    "profile": {
      "$ref": "https://yo-ai.ai/schemas/profile.schema.json"
    },
    "profilePatch": {
      "$ref": "https://yo-ai.ai/schemas/profile.patch.schema.json"
    },
    "governanceLabels": {
      "$ref": "https://yo-ai.ai/schemas/governanceLabels.schema.json"
    }
  },
  "required": ["result"]
}