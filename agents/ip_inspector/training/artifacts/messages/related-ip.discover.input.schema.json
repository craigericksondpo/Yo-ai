{
  "$id": "https://yo-ai.ai/schemas/related-ip.discover.input.schema.json",
  "title": "Related-IP.Discover.Input",
  "description": "Profile-aware input for the Related-IP.Discover capability.",
  "type": "object",
  "properties": {
    "profile": {
      "$ref": "https://yo-ai.ai/schemas/profile.schema.json",
      "description": "Optional reference to the subject/org profile to load."
    },
    "profilePatch": {
      "$ref": "https://yo-ai.ai/schemas/profile.patch.schema.json",
      "description": "Optional modifications to apply to the loaded profile."
    },
    "payload": {
      "type": "object",
      "description": "Capability-specific input fields for Related-IP.Discover.",
      "properties": {
        "org_ref": { "type": "string" },
        "asset_names": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["org_ref", "asset_names"]
    }
  },
  "required": ["payload"]
}