{
  "$id": "https://yo-ai.ai/schemas/use-cases.infer.input.schema.json",
  "title": "Use-Cases.Infer.Input",
  "description": "Profile-aware input for the Use-Cases.Infer capability.",
  "type": "object",
  "properties": {
    "profile": {
      "$ref": "https://yo-ai.ai/schemas/profile.schema.json",
      "description": "Optional reference to the subject/org profile to load."
    },
    "profilePatch": {
      "$ref": "https://yo-ai.ai/schemas/profile.patch.schema.json",
      "description": "Optional modifications to apply to the loaded profile."
    },
    "payload": {
      "type": "object",
      "description": "Capability-specific input fields for Use-Cases.Infer.",
      "properties": {
        "org_ref": { "type": "string" },
        "asset_ids": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["org_ref", "asset_ids"]
    }
  },
  "required": ["payload"]
}