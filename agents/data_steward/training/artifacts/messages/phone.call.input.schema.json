{
  "$id": "https://yo-ai.ai/schemas/data-steward/phone.call.input.schema.json",
  "title": "Phone.Call.Input",
  "description": "Profile-aware input for initiating outbound phone calls for verification, negotiation, or rights requests.",
  "type": "object",
  "properties": {
    "profile": {
      "$ref": "https://yo-ai.ai/schemas/profile.schema.json",
      "description": "Optional reference to the subject/org profile to load."
    },
    "profilePatch": {
      "$ref": "https://yo-ai.ai/schemas/profile.patch.schema.json",
      "description": "Optional modifications to apply to the loaded profile."
    },
    "payload": {
      "type": "object",
      "description": "Capability-specific input fields for Phone.Call.",
      "properties": {
        "to": { "type": "string" },
        "purpose": { "type": "string" },
        "script": { "type": "string" },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["to"]
    }
  },
  "required": ["payload"]
}