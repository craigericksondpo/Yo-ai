{
  "$id": "https://yo-ai.ai/schemas/decision-diary.manage.input.schema.json",
  "title": "Decision-Diary.Manage.Input",
  "description": "Profile-aware input for the Decision-Diary.Manage capability.",
  "type": "object",
  "properties": {
    "profile": {
      "$ref": "https://yo-ai.ai/schemas/profile.schema.json",
      "description": "Optional reference to the subject/org profile to load."
    },
    "profilePatch": {
      "$ref": "https://yo-ai.ai/schemas/profile.patch.schema.json",
      "description": "Optional modifications to apply to the loaded profile."
    },
    "payload": {
      "type": "object",
      "description": "Capability-specific input fields for Decision-Diary.Manage.",
      "properties": {
        "log_ref": { "type": "string" },
        "decision_ref": { "type": "string" },
        "factors": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["log_ref", "decision_ref", "factors"]
    }
  },
  "required": ["payload"]
}
