{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/agent-context.json",
  "title": "Agent Context Storage Record",
  "type": "object",
  "required": ["task_id", "agent_type", "context"],
  "properties": {
    "task_id": { "type": "string" },
    "agent_type": { "type": "string" },

    "context": {
      "description": "Opaque agent-specific internal state",
      "type": "object",
      "additionalProperties": true
    },

    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
