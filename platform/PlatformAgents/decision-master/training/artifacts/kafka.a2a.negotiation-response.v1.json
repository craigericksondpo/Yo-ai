// ðŸ“˜ Kafka Topic Schema â€” a2a.negotiation-response
// This is the value schema for responses emitted by the Decision Master after running the negotiation workflow.
{
  "$id": "https://fasta2a.dev/schemas/kafka.a2a.negotiation-response.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Kafka A2A Negotiation Response Event",
  "type": "object",
  "required": [
    "event_type",
    "event_id",
    "timestamp",
    "method",
    "request_id",
    "decision",
    "agreement_reached"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "a2a.negotiation-response"
    },
    "event_id": {
      "type": "string",
      "pattern": "^evt-nego-res-[a-zA-Z0-9-]+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "method": {
      "type": "string",
      "const": "negotiation.response"
    },
    "request_id": {
      "type": "string"
    },
    "decision": {
      "type": "string",
      "enum": ["agreement-reached", "no-agreement"]
    },
    "agreement_reached": {
      "type": "boolean"
    },
    "final_terms": {
      "type": "object",
      "properties": {
        "price": { "type": "number" },
        "delivery_window_days": { "type": "integer" },
        "support_level": { "type": "string" }
      },
      "additionalProperties": true
    },
    "reason": {
      "type": "string"
    },
    "diagnostics": {
      "type": "object",
      "properties": {
        "fit_outcome": { "type": "string" },
        "gap_outcome": { "type": "string" },
        "risk_outcome": { "type": "string" },
        "risk_score": { "type": "number" }
      },
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}