// decision.approvals_kafka-topic-schema
{
  "$id": "https://fasta2a.dev/schemas/decision.approval.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Decision Approval Event",
  "type": "object",
  "required": [
    "event_type",
    "event_id",
    "timestamp",
    "correlation_id",
    "request_id",
    "target_registered_agent_id",
    "approved_rights",
    "source_decision_trace_id"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "access-rights-approved"
    },
    "event_id": {
      "type": "string",
      "pattern": "^evt-approvals-[a-zA-Z0-9-]+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "correlation_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "target_registered_agent_id": {
      "type": "string"
    },
    "approved_rights": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "source_decision_trace_id": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
