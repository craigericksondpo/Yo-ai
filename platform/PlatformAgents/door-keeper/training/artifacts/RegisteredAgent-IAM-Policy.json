// RegisteredAgentPolicy
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ReadOwnAgentAuthFolder",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::${bucket}/agent-registry/${agent_name}/auth/*",
        "arn:aws:s3:::${bucket}/agent-registry/${agent_name}/auth/"
      ]
    },
    {
      "Sid": "ReadOwnExtendedAgentCard",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::${bucket}/agent-registry/${agent_name}/auth/extended-agent-card.json"
      ]
    }
  ]
}
// Notes
// •	This is read only by default.
// •	If you want agents to update their own extended card or metadata, add:
{
  "Sid": "WriteOwnAgentAuthFolder",
  "Effect": "Allow",
  "Action": [
    "s3:PutObject",
    "s3:DeleteObject"
  ],
  "Resource": "arn:aws:s3:::${bucket}/agent-registry/${agent_name}/auth/*"
}