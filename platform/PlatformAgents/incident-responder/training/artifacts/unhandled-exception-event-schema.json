// 1.2 Event schema (JSON Schema)
{
  "$id": "schemas/platform.unhandled_exception.detected.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Unhandled Exception Detected",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "timestamp",
    "execution_id",
    "runtime",
    "exception",
    "severity",
    "origin",
    "recovery_capability"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Globally unique ID for this event"
    },
    "event_type": {
      "type": "string",
      "const": "platform.unhandled_exception.detected"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "execution_id": {
      "type": "string",
      "description": "ID of the workflow/task/job execution"
    },
    "correlation_ids": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Related IDs (request, session, user, tenant, etc.)"
    },
    "runtime": {
      "type": "object",
      "required": ["language", "version", "executor_type"],
      "properties": {
        "language": { "type": "string" },
        "version": { "type": "string" },
        "executor_type": {
          "type": "string",
          "description": "e.g., 'workflow-engine', 'python-sandbox', 'js-sandbox'"
        },
        "node_id": { "type": "string" },
        "host": { "type": "string" }
      }
    },
    "origin": {
      "type": "object",
      "required": ["component_type", "component_name"],
      "properties": {
        "component_type": {
          "type": "string",
          "description": "workflow | service | task | agent | adapter"
        },
        "component_name": { "type": "string" },
        "component_version": { "type": "string" },
        "code_location": {
          "type": "object",
          "properties": {
            "file": { "type": "string" },
            "line": { "type": "integer" },
            "function": { "type": "string" }
          }
        }
      }
    },
    "exception": {
      "type": "object",
      "required": ["type", "message"],
      "properties": {
        "type": { "type": "string" },
        "message": { "type": "string" },
        "stack_trace": { "type": "string" },
        "cause_chain": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "message"],
            "properties": {
              "type": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Initial severity classification at emit time"
    },
    "recovery_capability": {
      "type": "string",
      "enum": ["unknown", "retriable", "non_retriable"]
    },
    "context": {
      "type": "object",
      "description": "Redacted business context, inputs, configuration snapshot"
    },
    "trace_links": {
      "type": "object",
      "properties": {
        "decision_trace_id": { "type": "string" },
        "span_id": { "type": "string" },
        "trace_id": { "type": "string" }
      }
    },
    "emitter_policy_hash": {
      "type": "string",
      "description": "Hash of emitter's runtime fault-handling policy at time of incident"
    }
  },
  "additionalProperties": false
}