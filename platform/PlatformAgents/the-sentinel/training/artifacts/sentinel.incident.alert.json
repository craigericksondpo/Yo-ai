{
  "$id": "schemas/sentinel.incident.alert.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sentinel Incident Alert",
  "type": "object",
  "required": [
    "incident_id",
    "alert_type",
    "timestamp",
    "source_event_type",
    "source_event_id",
    "severity",
    "classification",
    "recommendation",
    "policy_snapshot"
  ],
  "properties": {
    "incident_id": {
      "type": "string",
      "description": "Stable ID for the incident across alerts and responders"
    },
    "alert_type": {
      "type": "string",
      "const": "unhandled_exception"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "source_event_type": { "type": "string" },
    "source_event_id": { "type": "string" },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "classification": {
      "type": "object",
      "required": ["category", "sub_category"],
      "properties": {
        "category": {
          "type": "string",
          "enum": ["runtime_fault", "security", "data_quality", "availability", "unknown"]
        },
        "sub_category": { "type": "string" },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "recommendation": {
      "type": "object",
      "properties": {
        "proposed_actions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "terminate_execution",
              "pause_workflow",
              "shutdown_service",
              "shutdown_platform",
              "restart_component",
              "restart_platform",
              "isolate_tenant",
              "no_action_observe"
            ]
          }
        },
        "reasoning_summary": { "type": "string" }
      }
    },
    "policy_snapshot": {
      "type": "object",
      "description": "Hash or full snapshot of Sentinel rules used for this alert"
    },
    "trace_links": {
      "type": "object",
      "properties": {
        "decision_trace_id": { "type": "string" },
        "related_execution_ids": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "meta": {
      "type": "object",
      "description": "Additional metainformation, tags, router hints"
    }
  },
  "additionalProperties": false
}
