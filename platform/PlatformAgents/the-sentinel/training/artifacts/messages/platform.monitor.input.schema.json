{
  "$id": "https://yo-ai.ai/schemas/platform.monitor.input.schema.json",
  "title": "Platform.Monitor.Input",
  "description": "Input messageType for the Platform.Monitor capability.",
  "type": "object",
  "properties": {
    "log_ref": {
      "type": "string",
      "description": "Reference to the log record associated with the adverse event."
    },
    "operation": {
      "type": "string",
      "description": "Operation or action being monitored."
    },
    "payload": {
      "type": "object",
      "description": "Operation-specific data relevant to monitoring.",
      "additionalProperties": true
    }
  },
  "required": ["log_ref", "operation"]
}
