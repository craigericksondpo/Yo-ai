{
  "$id": "schema://data-steward/Phone.Call",
  "title": "Phone.Call",
  "type": "object",
  "description": "Make outbound phone calls for verification, negotiation, or rights requests.",
  "definitions": {
    "Input": {
      "type": "object",
      "properties": {
        "to": { "type": "string", "description": "Phone number to call" },
        "purpose": { "type": "string" },
        "script": { "type": "string" },
        "metadata": { "type": "object" }
      },
      "required": ["to"]
    },
    "Output": {
      "type": "object",
      "properties": {
        "callId": { "type": "string" },
        "status": { "type": "string", "enum": ["initiated", "connected", "completed", "failed"] },
        "transcript": { "type": "string" },
        "metadata": { "type": "object" }
      },
      "required": ["callId", "status"]
    }
  }
}