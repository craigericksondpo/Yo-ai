{
  "$id": "schema://data-steward/Email.Send",
  "title": "Email.Send",
  "type": "object",
  "description": "Send outbound email as the authorized agent of the data subject.",
  "definitions": {
    "Input": {
      "type": "object",
      "properties": {
        "to": { "type": "string" },
        "subject": { "type": "string" },
        "body": { "type": "string" },
        "attachments": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["to", "subject", "body"]
    },
    "Output": {
      "type": "object",
      "properties": {
        "messageId": { "type": "string" },
        "status": { "type": "string", "enum": ["queued", "sent", "failed"] },
        "providerMetadata": { "type": "object" }
      },
      "required": ["messageId", "status"]
    }
  }
}