{
  "$id": "https://yo-ai.ai/schemas/promotional-engagement.verify.input.schema.json",
  "title": "Promotional-Engagement.Verify.Input",
  "description": "Input messageType for the Promotional-Engagement.Verify capability.",
  "type": "object",
  "properties": {
    "promotion_rules": {
      "type": "object",
      "description": "Rules defining required engagement for promotional eligibility.",
      "properties": {
        "follow": { "type": "string" },
        "like": { "type": "string" },
        "hashtag": { "type": "string" },
        "repost": { "type": "string" },
        "comment_contains": { "type": "string" },
        "platform": { "type": "string" },
        "time_window": {
          "type": "object",
          "properties": {
            "start": { "type": "string", "format": "date-time" },
            "end": { "type": "string", "format": "date-time" }
          }
        }
      },
      "additionalProperties": true
    },
    "subject_handles": {
      "type": "object",
      "description": "Social media handles for the subject.",
      "additionalProperties": true
    },
    "context": {
      "type": "object",
      "description": "Optional context from the requesting agent (Rewards-Seeker, Data-Steward, etc.).",
      "additionalProperties": true
    }
  },
  "required": ["promotion_rules"]
}
