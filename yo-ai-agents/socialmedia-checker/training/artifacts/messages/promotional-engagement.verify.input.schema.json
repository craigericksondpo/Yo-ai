{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PromotionalEngagementVerifyInput",
  "type": "object",
  "required": ["promotion_rules"],
  "properties": {
    "promotion_rules": {
      "type": "object",
      "description": "Rules defining required engagement.",
      "properties": {
        "follow": { "type": "string" },
        "like": { "type": "string" },
        "hashtag": { "type": "string" },
        "repost": { "type": "string" }
      }
    },
    "subject_handles": {
      "type": "object",
      "description": "Social media handles for the subject.",
      "additionalProperties": true
    }
  }
}
