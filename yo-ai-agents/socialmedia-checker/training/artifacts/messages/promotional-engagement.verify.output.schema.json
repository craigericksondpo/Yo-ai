{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PromotionalEngagementVerifyOutput",
  "type": "object",
  "required": ["verified", "evidence"],
  "properties": {
    "verified": { "type": "boolean" },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "proof_hash": { "type": "string" }
        }
      }
    }
  }
}
