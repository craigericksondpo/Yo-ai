{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DarkWebScanInput",
  "type": "object",
  "required": ["query_terms"],
  "properties": {
    "query_terms": {
      "type": "array",
      "description": "PI or identifiers to search for (email, phone, hashed values).",
      "items": { "type": "string" }
    },
    "context": {
      "type": "object",
      "description": "Optional context from the requesting agent.",
      "additionalProperties": true
    },
    "request_id": {
      "type": "string",
      "description": "Correlation ID for async workflows."
    }
  }
}
