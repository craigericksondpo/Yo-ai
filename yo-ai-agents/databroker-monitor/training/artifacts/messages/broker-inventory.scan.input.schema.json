{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BrokerInventoryScanInput",
  "type": "object",
  "required": ["minimized_pi"],
  "properties": {
    "minimized_pi": {
      "type": "object",
      "description": "Minimized PI bundle from Data-Steward.",
      "additionalProperties": true
    },
    "broker_list": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Optional list of brokers to target."
    },
    "request_id": { "type": "string" }
  }
}
