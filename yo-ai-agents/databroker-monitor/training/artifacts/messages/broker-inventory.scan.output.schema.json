{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BrokerInventoryScanOutput",
  "type": "object",
  "required": ["scan_id", "matches"],
  "properties": {
    "scan_id": { "type": "string" },
    "matches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["broker", "match_confidence"],
        "properties": {
          "broker": { "type": "string" },
          "match_confidence": { "type": "number" },
          "evidence_hash": { "type": "string" },
          "dataset_ref": { "type": "string" }
        }
      }
    }
  }
}
