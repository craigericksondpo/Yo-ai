{
  "name": "Compliance-Validator",
  "description": "Evaluates facts, evidence, and assessments regarding laws, regulations, mandates, policies, and contracts. Produces factual compliance rationales suitable for audit, challenge, or testimony.",
  "url": "https://privacyportfolio.com/agent-registry/compliance-validator/agent.json",
  "provider": {
    "organization": "PrivacyPortfolio",
    "url": "https://www.PrivacyPortfolio.com"
    },
  "iconUrl": "https://privacyportfolio.com/agent-registry/compliance-validator/compliance-validator-agent-icon.png",
  "version": "1.0.0",
  "documentationUrl": "https://privacyportfolio.com/agent-registry/compliance-validator/v1-Compliance-Validator-AgentCard.md",
  "capabilities": {
    "streaming": true,
    "pushNotifications": true,
    "stateTransitionHistory": true
  },
  "securitySchemes": {
    "yo-ai": {
      "type": "apiKey",
      "name": "yo-api",
      "in": "header"
    }
  },
  "security": [{ "yo-ai": ["apiKey", "yo-api", "header"] }],
  "defaultInputModes": ["application/json", "text/plain"],
  "defaultOutputModes": ["application/json", "text/plain"],
  "skills": [
    {
      "id": "getComplianceStandard",
      "name": "getComplianceStandard",
      "description": "Retrieves a compliance standard, mandate, regulation, law, policy, or contract clause from the agent's knowledge repository.",
      "tags": ["compliance", "standards", "regulations", "knowledge"],
      "examples": [
        "Get GDPR Article 5",
        "Retrieve CCPA 1798.100",
        "Fetch ISO27001 A.5.1"
      ],
      "inputModes": ["application/json", "text/plain"],
      "outputModes": ["application/json", "text/plain"],
      "inputSchema": {
        "type": "object",
        "properties": {
          "standard_ref": {
            "type": "string",
            "description": "Identifier for the standard or clause (e.g., GDPR-ART5, CCPA-1798.100, ISO27001-A.5.1)."
          }
        },
        "required": ["standard_ref"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "standard_ref": { "type": "string" },
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "requirements": {
            "type": "array",
            "items": { "type": "string" }
          },
          "source_url": { "type": "string" }
        },
        "required": ["standard_ref", "summary"]
      }
    },
    {
      "id": "ValidateCompliance",
      "name": "ValidateCompliance",
      "description": "Evaluates facts and evidence against one or more compliance standards. Produces a factual compliance rationale suitable for audit or testimony.",
      "tags": [
        "complianceValidation",
        "legalMapping",
        "evidenceAnalysis",
        "audit",
        "testimony"
      ],
      "examples": [
        "Validate whether ACME's data handling aligns with GDPR Article 5",
        "Check if vendor:123 meets CCPA 1798.100 requirements",
        "Evaluate compliance of risk assessment findings against ISO27001"
      ],
      "inputModes": ["application/json", "text/plain"],
      "outputModes": ["application/json", "text/plain"],

      "inputSchema": {
        "type": "object",
        "properties": {
          "org_ref": {
            "type": "string",
            "description": "Organization being evaluated."
          },
          "facts": {
            "type": "object",
            "description": "Facts or evidence to validate (from Risk-Assessor, Vendor-Manager, Worker agents, etc.)."
          },
          "standards": {
            "type": "array",
            "description": "List of standards, mandates, or clauses to validate against.",
            "items": { "type": "string" }
          },
          "caller_context": {
            "type": "object",
            "properties": {
              "agent_id": { "type": "string" },
              "roles": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "required": ["org_ref", "facts", "standards"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "validation_id": { "type": "string" },
          "org_ref": { "type": "string" },
          "results": {
            "type": "array",
            "description": "Per-standard compliance rationale.",
            "items": {
              "type": "object",
              "properties": {
                "standard_ref": { "type": "string" },
                "compliance_status": {
                  "type": "string",
                  "enum": ["unknown", "compliant", "non_compliant", "partial"]
                },
                "rationale": { "type": "string" },
                "evidence_refs": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "assumptions": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "limitations": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "required": ["standard_ref", "compliance_status", "rationale"]
            }
          },
          "summary": { "type": "string" },
          "recommendations": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["validation_id", "org_ref", "results"]
      }
    }
  ],
  "supportsAuthenticatedExtendedCard": true
}
