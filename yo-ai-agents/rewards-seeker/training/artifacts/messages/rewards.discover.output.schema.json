{
  "$id": "https://yo-ai.ai/schemas/rewards.discover.output.schema.json",
  "title": "Rewards.Discover.Output",
  "description": "Output messageType for the Rewards.Discover capability.",
  "type": "object",
  "properties": {
    "opportunities": {
      "type": "array",
      "description": "List of reward opportunities discovered.",
      "items": {
        "type": "object",
        "properties": {
          "program": { "type": "string" },
          "reward_type": { "type": "string" },
          "estimated_value": { "type": "number" },
          "eligibility_requirements": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "recommended_actions": {
      "type": "array",
      "description": "Actions the user can take to earn rewards.",
      "items": { "type": "string" }
    }
  },
  "required": ["opportunities"]
}
