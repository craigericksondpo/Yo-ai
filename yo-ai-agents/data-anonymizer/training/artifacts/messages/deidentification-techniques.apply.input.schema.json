{
  "$id": "https://yo-ai.ai/schemas/deidentification-techniques.apply.input.schema.json",
  "title": "Deidentification-Techniques.Apply.Input",
  "description": "Input messageType for the Deidentification-Techniques.Apply capability.",
  "type": "object",
  "properties": {
    "dataset": {
      "type": "array",
      "description": "Tabular dataset represented as an array of objects.",
      "items": { "type": "object", "additionalProperties": true }
    },
    "techniques": {
      "type": "array",
      "description": "List of de-identification techniques to apply.",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the technique (e.g., 'mask', 'generalize', 'bucket', 'hash')."
          },
          "parameters": {
            "type": "object",
            "description": "Technique-specific configuration parameters.",
            "additionalProperties": true
          }
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Optional context from the requesting agent.",
      "additionalProperties": true
    }
  },
  "required": ["dataset", "techniques"]
}
