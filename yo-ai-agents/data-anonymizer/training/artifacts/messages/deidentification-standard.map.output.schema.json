{
  "$id": "https://yo-ai.ai/schemas/deidentification-standard.map.output.schema.json",
  "title": "Deidentification-Standard.Map.Output",
  "description": "Output messageType for the Deidentification-Standard.Map capability.",
  "type": "object",
  "properties": {
    "standard_mappings": {
      "type": "array",
      "description": "Mapping results showing how the dataset aligns with each standard.",
      "items": {
        "type": "object",
        "properties": {
          "standard": { "type": "string" },
          "compliance_status": {
            "type": "string",
            "enum": ["compliant", "partially_compliant", "non_compliant"]
          },
          "gaps": {
            "type": "array",
            "description": "Identified gaps preventing full compliance.",
            "items": { "type": "string" }
          },
          "required_mitigations": {
            "type": "array",
            "description": "Mitigations needed to achieve compliance.",
            "items": { "type": "string" }
          }
        }
      }
    },
    "overall_posture": {
      "type": "string",
      "description": "High-level assessment of de-identification posture across all standards.",
      "enum": ["strong", "moderate", "weak"]
    }
  },
  "required": ["standard_mappings"]
}
